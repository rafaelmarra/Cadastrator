<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:elevation="8dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

        <TextView
                android:text="J"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:background="@color/accent"
                android:textColor="@color/icons"
                android:id="@+id/txtItemLetter" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtItemName"
                app:layout_constraintBottom_toBottomOf="@+id/txtItemBirth" android:textSize="40sp"
                android:gravity="center" android:textStyle="bold"/>
        <TextView
                android:text="José das Couves Peixola"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/txtItemName"
                app:layout_constraintTop_toTopOf="parent" android:textSize="14sp" android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/txtItemLetter" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="CPF:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/txtItemName"
                android:layout_marginTop="8dp" android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/txtItemLetter" android:layout_marginStart="8dp"
                android:textStyle="bold"/>
        <TextView
                android:text="000.000.000-00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtItemCpf" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtItemName" app:layout_constraintStart_toEndOf="@+id/textView7"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Nascimento:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/txtItemLetter"
                android:layout_marginStart="8dp" android:textStyle="bold"/>
        <TextView
                android:text="30/02/1900"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtItemBirth" app:layout_constraintStart_toEndOf="@+id/textView9"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtItemCpf"/>
        <TextView
                android:text="Endereço:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView12" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
                android:textStyle="bold"/>
        <TextView
                android:text="Rua dos Bobos, 0000, ap. 000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtItemAddress"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView12"/>
        <TextView
                android:text="São Paulo - SP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtItemCity" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtItemAddress" app:layout_constraintStart_toStartOf="parent"
        />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>